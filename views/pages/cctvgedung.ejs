!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CCTV-UNNES</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
      <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/style.css">
  </head>
<body style="padding: 20px;">
  <%- include('../partials/navbar')  %>
  <div style="text-align: center;">
    <% for(let i = 1; i <= 6; i++) { %>
      <% if (denahGedung['url' + i]) { %>
        <div class= "container" style="position:relative; width:1080px; height:720px;">
          <img src="<%= denahGedung['url' + i] %>" alt="lantai-<%= i %>" width="1080" height="720">
          <% cctvroom.forEach(function(room) { %>
            <% if(Number(room.lantai) === i) { %>
              <img id="cctvroom-marker-" src="/img/street_icon_marker_cctv1.png" alt="marker" style="position:absolute; top: <%= room.y %>%; left: <%= room.x %>%; transform: translate(-50%, -50%);" data-content="<%= room.content %>" data-nama="<%= room.nama %>" data-url="<%= room.url %>">
            <% } %>
          <% }) %>
        </div>
      <% } %>
    <% } %>
    <div id="infowindow" style="display: none; position: absolute; background-color: white; padding: 15px; border: 0.2px solid black; border-radius: 10px; width: 300px; text-align: left;">
      <button id="infowindow-close" class="btn-close" style="position: absolute; top: 5px; right: 5px; width: 5px; height: 5px;"></button>
      <h1 id="infowindow-nama"></h1>
      <p id="infowindow-content"></p>
      <p>pilih jenis cctv</p>
      <button class="btn btn-primary" id="infowindow-button">CCTV NORMAL</button>
    </div>
  </div>
</body>